{
  "name": "access4all",
  "version": "1.0.0",
  "description": "Plateforme collaborative d'accessibilité numérique.",
  "homepage": "https://github.com/MTES-MCT/access4all/#readme",
  "author": "Nicolas Perriault <nicolas@perriault.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm run copy-assets && elm make src/Main.elm --optimize --output=build/elm.js && npm run optimize",
    "copy-assets": "rimraf build && mkdir build && cp -Lr public/* build",
    "debug": "elm-live src/Main.elm --port=3000 --dir=public/ -- --output=public/elm.js --debug",
    "deploy": "npm run build && git push scalingo master",
    "live": "elm-live src/Main.elm $npm_package_liveArgs -- --output=public/elm.js",
    "optimize": "uglifyjs build/elm.js -c -m -o build/elm.js",
    "start": "npm run live",
    "test": "elm-test"
  },
  "liveArgs": "--ssl -p 3000 -d public/",
  "devDependencies": {
    "elm": "0.19.1-3",
    "elm-format": "^0.8.3",
    "elm-live": "^4.0.1",
    "elm-test": "^0.19.1",
    "gh-pages": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "uglify-js": "^3.8.0"
  }
}
